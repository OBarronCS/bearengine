{
    "compilerOptions": {
        "baseUrl":"../",
        
        "moduleResolution": "node",
        "esModuleInterop": true,

        "target": "ES2020",
        "lib": ["DOM","ESNext"],
        
        // Look into setting sourceMap = true for better debugging
        
        "experimentalDecorators":true,

        //"noImplicitAny" : true,
        "noImplicitThis":true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noFallthroughCasesInSwitch": true,
        "strictBindCallApply":true,

        "types": [
            "webpack",
            "webpack-env"
        ]        
    },
    "exclude": [
        "node_modules",
        "**/node_modules/",
    ],    
}
