{
    "compilerOptions": {
        "baseUrl":"../",
        "outDir": "/build",
        
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "target": "ESNext",
        "lib": ["DOM","ESNext"],

        "noImplicitThis":true,
        
        "noFallthroughCasesInSwitch": true,
        
        //"allowSyntheticDefaultImports": true
        //"noImplicitAny" : true,

    },
    "exclude": [
        "node_modules",
        "**/node_modules/",
        "../client"
    ]
}