{
    "compilerOptions": {
        "baseUrl":"./",

        "target": "ES2020",
        "lib": ["DOM","ESNext"],

        "experimentalDecorators":true,
        
        //"noImplicitAny" : true,
        "strictFunctionTypes": true,
        "alwaysStrict":true,
        "noImplicitThis":true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noFallthroughCasesInSwitch": true,
        "strictBindCallApply":true,
        

        // forceConsistentCasingInFileNames: true,
        
    },
    "exclude": [
        "node_modules",
        "**/node_modules/",
    ],    
}
